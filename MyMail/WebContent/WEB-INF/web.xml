<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>validatelogin</servlet-name>
		<servlet-class>LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>validatelogin</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>inbox</servlet-name>
		<servlet-class>InboxServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>inbox</servlet-name>
		<url-pattern>/inbox</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>admininbox</servlet-name>
		<servlet-class>AdminInbox</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>admininbox</servlet-name>
		<url-pattern>/admininbox</url-pattern>
	</servlet-mapping>
	
		<servlet>
		<servlet-name>geenainbox</servlet-name>
		<servlet-class>UserInbox</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>geenainbox</servlet-name>
		<url-pattern>/userinbox</url-pattern>
	</servlet-mapping>
	
	<servlet>
        <servlet-name>mail</servlet-name>
        <servlet-class>com.mailer.MailApp</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>mail</servlet-name>
        <url-pattern>/mail</url-pattern>
    </servlet-mapping>
	
</web-app>